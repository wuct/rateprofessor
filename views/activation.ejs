<% layout('layout') -%>

<h1>信箱認證成功，請設密碼</h1>

<div id="formSignup" class="form-horizontal">
	<div class="control-group">
		<label class="control-label" for="inputEmail">學校信箱</label>
		<div class="controls" id="email"><%= email %></div>
	</div>
	<div class="control-group">
		<label class="control-label" for="inputPassword">密碼</label>
		<div class="controls">
			<input type="password" id="inputPassword" placeholder="Password">
			<span class="help-block hide">請輸入密碼</span>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="inputPassword2">請再次輸入密碼</label>
		<div class="controls">
			<input type="password" id="inputPassword2" placeholder="Password">
			<span class="help-block hide">請輸入密碼</span>
			<span class="equal-error help-block hide">請確認密碼一樣</span>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<button id="btnSignup" type="submit" class="btn">註冊</button>
		</div>
	</div>
</div>

<!-- Application core (Order matters) -->
<script type="text/javascript">
var getEmail = function() {
	return '<%= email %>';
};
</script>
<script src="/javascripts/activateApp.js"></script>